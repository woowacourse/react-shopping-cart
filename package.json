{
  "name": "react-shopping-cart",
  "version": "0.1.0",
  "private": true,
  "contributors": [
    {
      "name": "hchayan",
      "email": "hchayan@gmail.com",
      "url": "https://chayan.oopy.io/"
    },
    {
      "name": "bigsaigon333",
      "email": "likepeppermint@gmail.com",
      "url": "https://velog.io/@bigsaigon333"
    }
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.2.3",
    "styled-reset": "^4.3.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "deploy": "NODE_DEBUG=gh-pages gh-pages -d build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jsx-a11y/recommended",
      "plugin:import/recommended",
      "airbnb",
      "airbnb/hooks",
      "prettier"
    ],
    "plugins": [
      "jsx-a11y",
      "import"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "react/jsx-props-no-spreading": "off"
        }
      },
      {
        "files": [
          "**/*.styled.*"
        ],
        "rules": {
          "import/prefer-default-export": "off"
        }
      },
      {
        "files": [
          "./src/store/modules/**/*"
        ],
        "rules": {
          "no-param-reassign": "off"
        }
      },
      {
        "files": "**/*.jsx",
        "rules": {
          "jsx-a11y/label-has-associated-control": [
            "error",
            {
              "labelComponents": [
                "Label",
                "S.*Label"
              ],
              "controlComponents": [
                "CheckBox"
              ],
              "assert": "either",
              "depth": 3
            }
          ]
        }
      }
    ],
    "ignorePatterns": "node_modules"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "gh-pages": "^3.1.0",
    "history": "^5.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.2.1",
    "redux-devtools": "^3.7.0"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix",
    "*.{js,jsx,html,json,css,md}": "prettier --write"
  },
  "homepage": "https://bigsaigon333.github.io/react-shopping-cart"
}
